[postserialization]
class Entity
{
	bool Visible;

	[hidden]
	glm::mat4 ModelToWorldMatrix;

	[adder, setcallback]
	glm::vec3 Position;
	
	[setcallback]
	float RotationAngle;

	[setcallback]
	glm::vec3 RotationAxis;

	[setcallback]
	glm::vec3 Scale;

	[setcallback, transient]
	bool HasMoved;

	[readonly, transient, nocloning]
	float PickingID;

	bool IsLight;

	[addcallback]
	std::vector<Component*> Components;

	[setcallback, transient]
	bool COMMAND_LoadModel = false;
}