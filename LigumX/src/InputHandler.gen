[globalinstance]
class InputHandler
{
	[setcallback]
	bool Mouse1Pressed;

	bool Mouse2Pressed;

	bool Dragging;
	glm::vec2 DragDistance;
	glm::vec2 LastDragDistance;

	[adder]
	glm::vec2 DragAccumulator;


	[setcallback]
	glm::vec2 MouseClickPosition;
	glm::vec2 LastMouseClickPosition;

	glm::vec2 MouseReleasePosition;

	[setcallback]
	glm::vec2 MousePosition;
	glm::vec2 LastMousePosition;

	[adder]
	glm::vec2 MouseScroll;

}