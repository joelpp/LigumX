	[transient, setcallback]
	Entity* PickedEntity

	[transient]
	glm::vec2 AimingWindowPosition;

	[transient]
	glm::vec3 AimingWorldPosition

	[transient]
	float AimingID;

	[transient]
	glm::vec3 PickedWorldPosition

	[transient, hidden]
