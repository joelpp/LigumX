	bool DrawSky;
	bool WireframeRendering;
	bool UseLighting;
	bool ShowNormals;
	bool ShowUVs;
	bool ShowSpecular;
	bool ShowDiffuse;
	bool ShowAmbient;
	bool ShowFPS;
	bool ShowDepth;
	bool ShowDebugIcons = false;
	bool LinearizeDepth;
	bool BlinnPhongShading;
